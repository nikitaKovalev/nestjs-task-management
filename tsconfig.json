{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@core/models": ["src/core/models/index.ts"],
      "@core/helpers": ["src/core/helpers/index.ts"],
      "@core/utils": ["src/core/utils/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
